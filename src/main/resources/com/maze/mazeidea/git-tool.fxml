<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="8" xmlns:fx="http://javafx.com/fxml" fx:controller="com.maze.mazeidea.git.GitToolController" styleClass="tool-window">
    <padding>
        <Insets top="8" right="8" bottom="8" left="8" />
    </padding>
    <HBox spacing="8">
        <Label text="Git" styleClass="section-title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="refreshButton" text="Refresh" />
    </HBox>
    <SplitPane orientation="VERTICAL" dividerPositions="0.45">
        <items>
            <SplitPane dividerPositions="0.4">
                <items>
                    <VBox spacing="6">
                        <Label text="Changes" styleClass="section-title"/>
                        <ListView fx:id="statusList" />
                    </VBox>
                    <VBox spacing="6">
                        <Label text="Diff" styleClass="section-title"/>
                        <TextArea fx:id="diffArea" editable="false" wrapText="false" />
                    </VBox>
                </items>
            </SplitPane>
            <VBox spacing="6">
                <Label text="Commit" styleClass="section-title"/>
                <TextArea fx:id="commitMessage" prefRowCount="3" promptText="Commit message" />
                <HBox spacing="8">
                    <Button fx:id="commitButton" text="Commit All" styleClass="primary-action" />
                    <Label fx:id="commitStatus" text="" />
                </HBox>
            </VBox>
        </items>
    </SplitPane>
</VBox>
